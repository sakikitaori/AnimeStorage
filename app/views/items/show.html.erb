<h1>投稿詳細</h1>
<div>

  <% if @item.image.attached? %>
    <p>投稿画像：<%= image_tag @item.image, size:"200x200" %></p>
  <% end %>
  <p>ショップ名：<%= @item.title %></p>
  <p>説明：<%= @item.body %></p>
  <p>投稿ユーザー画像：<%= image_tag @item.user.get_profile_image, size:"100x100" %></p>
  <p>ユーザーネーム：<%= @item.user.name %></p>
  <p>投稿日：<%= @item.created_at.strftime('%Y/%m/%d') %></p>

  <% if @item.user == current_user %>
    <%= link_to "削除", item_path(@item), method: :delete %>
  <% end %>

</div>

<div>

  <!--コメント-->
  <p>コメント件数：<%= @item.post_comments.count %></p>
  <% @item.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.user.get_profile_image, size:"100x100" %></p>
    <%= post_comment.user.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <!--コメント削除-->
    <% if post_comment.user == current_user %>
      <%= link_to "削除", item_post_comment_path(post_comment.item, post_comment), method: :delete %>
    <% end %>
  <% end %>

    <!--いいね-->
    <% if @item.favorited_by?(current_user) %>
      <p>
        <%= link_to item_favorites_path(@item), method: :delete do %>
          ♥<%= @item.favorites.count %> いいね
        <% end %>
      </p>
    <% else %>
      <p>
        <%= link_to item_favorites_path(@item), method: :post do %>
          ♡<%= @item.favorites.count %> いいね
        <% end %>
      </p>
    <% end %>

</div>
<div>
  <%= form_with model: [@item, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>