<h1>新規投稿</h1>

<!--エラーメッセージ-->
<%= render 'error', errors: @item %>

<%= form_with model: @item do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>内容</h4>
  <%= f.text_area :body %>

  <h4><%= f.label"タグ (,で区切ると複数タグ登録できます)" %></h4>
  <%= f.text_field :name,value: @tag_list,class:"form-control"%>

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.submit '投稿' %>

<% end %>