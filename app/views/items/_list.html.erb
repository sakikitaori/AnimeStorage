<!--投稿一覧-->
<% items.each do |item| %>
<!--投稿はカードで囲む-->
<div class="card">
  <div class="card-body">
    <h6 class="card-title">

  <%= link_to item_path(item.id) do %>
  <% if item.image.attached? %>
    <%= image_tag item.image, size:"200x200" %>
  <% end %>
  <p>ショップ名：<%= item.title %></p>
  <p>説明：<%= item.body %></p>
  <p><%= link_to "#{item.post_comments.count} コメント", item_path(item.id) %></p>
  <p>投稿ユーザー画像：<%= image_tag item.user.get_profile_image, size:"50x50" %></p>
  <p>ユーザーネーム：<%= item.user.name %></p>
  <% end %>

    </h6>
  </div>
</div>
<% end %>
<%= paginate items %>